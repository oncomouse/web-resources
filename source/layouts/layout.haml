%html.no-js{ :lang => "en" }
	<!--<![endif]-->
	%head
		%meta{ :charset => "utf-8" }/
		
		-# Always force latest IE rendering engine (even in intranet) & Chrome Frame
		-# Remove this if you use the .htaccess
		-# %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
		
		%title 
			- if current_page.respond_to? :data
				- if current_page.data['title']
					= current_page.data['title']
				- else
					Middleman Page
			- else
				Middleman Page
		%meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
		- if build?
			= stylesheet_link_tag("app.css", :media => "all", :rel => "stylesheet")
		- else
			= stylesheet_link_tag("vendor/bootstrap/dist/css/bootstrap", :media => "all", :rel => "stylesheet")
			= stylesheet_link_tag("style.css", :media => "all", :rel => "stylesheet")
		
	%body{ :class => page_classes }
		=yield
		- if build?
			=javascript_include_tag('all')
		- else
			=javascript_include_tag('vendor/underscore/underscore', 'vendor/underscore.string/dist/underscore.string', 'vendor/underscore.inflection/lib/underscore.inflection', 'vendor/jquery/dist/jquery', 'vendor/bootstrap/dist/js/bootstrap', 'vendor/isotope/dist/isotope.pkgd', 'plugins', 'site')
